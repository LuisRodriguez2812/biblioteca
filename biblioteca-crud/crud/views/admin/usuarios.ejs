<%- include('../partials/header') %>
<div class="container mt-4">
  <h1 class="text-center mb-4">Gestión de Usuarios</h1>

  <div class="mb-3 text-end">
    <a href="/admin/usuarios/crear" class="btn btn-success">Registrar Nuevo Usuario</a>
  </div>

  <table class="table table-bordered table-hover bg-white shadow-sm">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Correo</th>
        <th>Tipo de Usuario</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% usuarios.forEach(usuario => { %>
        <tr>
          <td><%= usuario.id %></td>
          <td><%= usuario.nombre %></td>
          <td><%= usuario.correo %></td>
          <td><%= usuario.tipo %></td>
          <td>
            <a href="/admin/usuarios/<%= usuario.id %>" class="btn btn-sm btn-info">Ver</a>
            <a href="/admin/usuarios/editar/<%= usuario.id %>" class="btn btn-sm btn-warning">Editar</a>
            <form action="/admin/usuarios/eliminar/<%= usuario.id %>" method="POST" class="d-inline">
              <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Seguro que deseas eliminar este usuario?');">Eliminar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('../partials/footer') %>
